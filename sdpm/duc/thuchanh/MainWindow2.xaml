<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxa="http://schemas.devexpress.com/winfx/2008/xaml/accordion" 
    x:Class="thuchanh.MainWindow"
    Title="Quản Lý Thư Viện" Height="800" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Menu trái -->
            <ColumnDefinition Width="220"/>
            <!-- Nội dung chính -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Menu -->
        <Border Grid.Column="0" Background="#1E3A8A" CornerRadius="0,12,12,0" >
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="📚 Menu" 
                           Foreground="White" 
                           FontSize="22" 
                           FontWeight="Bold"
                           Margin="16,24,0,24"/>

                <!-- Accordion Menu -->
                <dxa:AccordionControl 
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    ExpandMode="Single"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">

                    <!-- Thể loại -->
                    <dx:SimpleButton x:Name="Theloai" 
                                     Content="📖 Thể loại sách" 
                                     Click="Theloai_Click"
                                     Background="Transparent"
                                     Foreground="White"
                                     FontSize="16"
                                     Padding="12"
                                     HorizontalContentAlignment="Left"
                                     BorderThickness="0"
                                     Margin="4"
                                     Cursor="Hand"/>

                    <!-- Quản lý sách -->
                    <dx:SimpleButton x:Name="Sach" 
                                     Content="📚 Quản lý sách" 
                                     Click="Sach_Click"
                                     Background="Transparent"
                                     Foreground="White"
                                     FontSize="16"
                                     Padding="12"
                                     HorizontalContentAlignment="Left"
                                     BorderThickness="0"
                                     Margin="4"
                                     Cursor="Hand"/>

                    <!-- Hoá đơn -->
                    <dx:SimpleButton x:Name="Hoadon" 
                                     Content="🧾 Hoá đơn" 
                                     Click="Hoadon_Click"
                                     Background="Transparent"
                                     Foreground="White"
                                     FontSize="16"
                                     Padding="12"
                                     HorizontalContentAlignment="Left"
                                     BorderThickness="0"
                                     Margin="4"
                                     Cursor="Hand"/>
                </dxa:AccordionControl>
            </StackPanel>
        </Border>

        <!-- Nội dung chính -->
        <Border Grid.Column="1" Background="#F3F4F6" CornerRadius="12" Margin="12">
            <StackPanel x:Name="stackPanelContainer"/>
        </Border>
    </Grid>
</dx:ThemedWindow>