<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:thuchanh"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
             x:Class="thuchanh.Sach"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1000">
    <Grid Background="#F5F7FA">
        <!-- Header Section -->
        <Border Height="90" VerticalAlignment="Top" Background="#2563EB">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📚 Quản Lý Sách" 
                             Foreground="White" 
                             FontFamily="Segoe UI" 
                             FontSize="36" 
                             FontWeight="SemiBold"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Book Management System" 
                             Foreground="#93C5FD" 
                             FontFamily="Segoe UI" 
                             FontSize="14" 
                             HorizontalAlignment="Center"
                             Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area with ScrollViewer -->
        <ScrollViewer Margin="60,120,60,60" VerticalScrollBarVisibility="Auto">
            <Border Background="White" 
                    CornerRadius="12"
                    Padding="40">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="20"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Form Section Header with Search Bar -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Title -->
                        <TextBlock Grid.Column="0"
                                 Text="Thông tin sách" 
                                 FontFamily="Segoe UI" 
                                 FontSize="20" 
                                 FontWeight="SemiBold"
                                 Foreground="#1F2937"
                                 VerticalAlignment="Center"/>

                        <!-- Search Bar -->
                        <StackPanel Grid.Column="2" 
                                  Orientation="Horizontal"
                                  VerticalAlignment="Center">
                            <Border Background="#F9FAFB"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Margin="0,0,8,0">
                                <TextBox x:Name="SearchTextBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontFamily="Segoe UI"
                                         FontSize="13"
                                         Foreground="#374151"
                                         VerticalContentAlignment="Center"
                                         Padding="12,0"
                                         Width="220"
                                         Height="36"
                                         Text="Tìm kiếm sách...">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="Text" Value=""/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Border>

                            <Border Background="#2563EB"
                                    CornerRadius="6"
                                    Cursor="Hand">
                                <dx:SimpleButton x:Name="SearchButton"
                                               Content="🔍 Tìm"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Foreground="White"
                                               FontFamily="Segoe UI"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Width="70"
                                               Height="36"
                                               HorizontalContentAlignment="Center"
                                               VerticalContentAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Category Section -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Thể loại" 
                                 Grid.Column="0"
                                 VerticalAlignment="Center"
                                 FontFamily="Segoe UI" 
                                 FontSize="16" 
                                 FontWeight="Medium"
                                 Foreground="#1F2937"/>

                        <Border Grid.Column="1" 
                                Background="#F9FAFB" 
                                BorderBrush="#E5E7EB" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Height="48">
                            <dx:DropDownButton x:Name="Theloai" 
                                             Content="Chọn thể loại sách" 
                                             Background="Transparent"
                                             BorderThickness="0"
                                             FontFamily="Segoe UI"
                                             FontSize="14"
                                             Foreground="#6B7280"
                                             HorizontalContentAlignment="Left"
                                             Padding="16,0,16,0"/>
                        </Border>
                    </Grid>

                    <!-- Book Name Section -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Tên sách" 
                                 Grid.Column="0"
                                 VerticalAlignment="Center"
                                 FontFamily="Segoe UI" 
                                 FontSize="16" 
                                 FontWeight="Medium"
                                 Foreground="#1F2937"/>

                        <Border Grid.Column="1" 
                                Background="White" 
                                BorderBrush="#E5E7EB" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Height="48">
                            <TextBox x:Name="TenSachTextBox"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   Foreground="#374151"
                                   VerticalContentAlignment="Center"
                                   Padding="16,0,16,0"/>
                        </Border>
                    </Grid>

                    <!-- Author Name Section -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Tên tác giả" 
                                 Grid.Column="0"
                                 VerticalAlignment="Center"
                                 FontFamily="Segoe UI" 
                                 FontSize="16" 
                                 FontWeight="Medium"
                                 Foreground="#1F2937"/>

                        <Border Grid.Column="1" 
                                Background="White" 
                                BorderBrush="#E5E7EB" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Height="48">
                            <TextBox x:Name="TenTacGiaTextBox"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   Foreground="#374151"
                                   VerticalContentAlignment="Center"
                                   Padding="16,0,16,0"/>
                        </Border>
                    </Grid>

                    <!-- Price Section -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Đơn giá" 
                                 Grid.Column="0"
                                 VerticalAlignment="Center"
                                 FontFamily="Segoe UI" 
                                 FontSize="16" 
                                 FontWeight="Medium"
                                 Foreground="#1F2937"/>

                        <Border Grid.Column="1" 
                                Background="White" 
                                BorderBrush="#E5E7EB" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Height="48">
                            <TextBox x:Name="DonGiaTextBox"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   Foreground="#374151"
                                   VerticalContentAlignment="Center"
                                   Padding="16,0,16,0"/>
                        </Border>
                    </Grid>

                    <!-- Quantity Section -->
                    <Grid Margin="0,0,0,32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Số lượng" 
                                 Grid.Column="0"
                                 VerticalAlignment="Center"
                                 FontFamily="Segoe UI" 
                                 FontSize="16" 
                                 FontWeight="Medium"
                                 Foreground="#1F2937"/>

                        <Border Grid.Column="1" 
                                Background="White" 
                                BorderBrush="#E5E7EB" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Height="48">
                            <TextBox x:Name="SoLuongTextBox"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   Foreground="#374151"
                                   VerticalContentAlignment="Center"
                                   Padding="16,0,16,0"/>
                        </Border>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                        <!-- Add Button -->
                        <Border Background="#10B981" 
                                CornerRadius="8" 
                                Height="52"
                                Width="180"
                                Margin="0,0,12,0"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" Direction="270" ShadowDepth="2" Opacity="0.4" BlurRadius="12"/>
                            </Border.Effect>
                            <dx:SimpleButton x:Name="Them" 
                                           Content="✓ Thêm sách" 
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Foreground="White"
                                           FontFamily="Segoe UI"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"/>
                        </Border>

                        <!-- Edit Button -->
                        <Border Background="#F59E0B" 
                                CornerRadius="8" 
                                Height="52"
                                Width="180"
                                Margin="12,0,12,0"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#F59E0B" Direction="270" ShadowDepth="2" Opacity="0.4" BlurRadius="12"/>
                            </Border.Effect>
                            <dx:SimpleButton x:Name="sua" 
                                           Content="✎ Sửa sách" 
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Foreground="White"
                                           FontFamily="Segoe UI"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"/>
                        </Border>

                        <!-- Delete Button -->
                        <Border Background="#EF4444" 
                                CornerRadius="8" 
                                Height="52"
                                Width="180"
                                Margin="12,0,0,0"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#EF4444" Direction="270" ShadowDepth="2" Opacity="0.4" BlurRadius="12"/>
                            </Border.Effect>
                            <dx:SimpleButton x:Name="Xoa" 
                                           Content="✗ Xóa sách" 
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Foreground="White"
                                           FontFamily="Segoe UI"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           HorizontalContentAlignment="Center"
                                           VerticalContentAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Helper Text -->
                    <TextBlock Text="Vui lòng điền đầy đủ thông tin trước khi thêm sách mới" 
                             FontFamily="Segoe UI" 
                             FontSize="12" 
                             Foreground="#9CA3AF"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,32"/>

                    <!-- DataGrid Section -->
                    <TextBlock Text="Danh sách sách" 
                             FontFamily="Segoe UI" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Foreground="#1F2937"
                             Margin="0,0,0,16"/>

                    <!-- Data Grid -->
                    <DataGrid x:Name="SachDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderBrush="#E5E7EB"
                              BorderThickness="1"
                              RowBackground="White"
                              AlternatingRowBackground="#F9FAFB"
                              GridLinesVisibility="Horizontal"
                              ColumnHeaderHeight="48"
                              RowHeight="44"
                              FontFamily="Segoe UI"
                              FontSize="14"
                              Foreground="#374151"
                              HorizontalAlignment="Stretch"
                              MinHeight="300">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#1F2937"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="16,0"/>
                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#DBEAFE"/>
                                        <Setter Property="Foreground" Value="#1E40AF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên sách" Binding="{Binding TenSach}" Width="2*"/>
                            <DataGridTextColumn Header="Tác giả" Binding="{Binding TacGia}" Width="1.5*"/>
                            <DataGridTextColumn Header="Thể loại" Binding="{Binding TheLoai}" Width="1.5*"/>
                            <DataGridTextColumn Header="Đơn giá" Binding="{Binding DonGia, StringFormat='{}{0:N0} ₫'}" Width="1*"/>
                            <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" Width="1*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>